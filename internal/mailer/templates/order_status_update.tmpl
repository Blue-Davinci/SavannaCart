        }
        
        .order-total {
            color: #00b894;
            font-size: 20px;
            font-weight: bold;
            margin: 10px 0;
        }
        
        .order-date {
            color: #636e72;
            font-size: 14px;
            margin: 5px 0;
        }
        
        .status-message {
            background-color: #e8f4fd;
